<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="SegoeUi" >/My.CoachManager.Presentation;component/Resources/Fonts/#Segoe UI</FontFamily>
    <FontFamily x:Key="SegoeUiBold" >/My.CoachManager.Presentation;component/Resources/Fonts/#Segoe UI Semibold</FontFamily>
    <FontFamily x:Key="SegoeUiLight" >/My.CoachManager.Presentation;component/Resources/Fonts/#Segoe UI Light</FontFamily>

    <sys:Double x:Key="DefaultFontSize">14</sys:Double>
    <sys:Double x:Key="MenuFontSize">16</sys:Double>
    <sys:Double x:Key="SubMenuFontSize">22</sys:Double>
    <sys:Double x:Key="SmallTitleFontSize">15</sys:Double>
    <sys:Double x:Key="SubTitleFontSize">24</sys:Double>
    <sys:Double x:Key="TitleFontSize">26</sys:Double>
    <sys:Double x:Key="HeaderFontSize">30</sys:Double>
</ResourceDictionary>