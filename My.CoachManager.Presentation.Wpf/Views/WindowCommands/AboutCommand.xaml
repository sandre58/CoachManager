<UserControl x:Class="My.CoachManager.Presentation.Wpf.Views.WindowCommands.AboutCommand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:My.CoachManager.Presentation.Controls;assembly=My.CoachManager.Presentation.Controls"
             xmlns:resources="clr-namespace:My.CoachManager.Presentation.Wpf.Resources"
             xmlns:viewModels="clr-namespace:My.CoachManager.Presentation.Wpf.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:ShellViewModel}"
             DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
    <Button ToolTip="{x:Static resources:AboutResources.AboutButton}" Command="{Binding ShowAboutCommand}">
        <controls:Icon Content="{StaticResource InformationGeometry}" Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Foreground, Mode=OneWay}" />
    </Button>
</UserControl>