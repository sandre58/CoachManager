<UserControl x:Class="My.CoachManager.Presentation.Modules.Settings.Views.SettingsCommand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:strings="clr-namespace:My.CoachManager.Presentation.Modules.Settings.Resources"
             xmlns:controls="clr-namespace:My.CoachManager.Presentation.Controls;assembly=My.CoachManager.Presentation.Controls"
             mc:Ignorable="d"
             DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
    <Button ToolTip="{x:Static strings:SettingsResources.SettingsButton}" Command="{Binding ToggleSettingsCommand}">
        <controls:Icon Content="{StaticResource SettingsGeometry}" Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=Foreground, Mode=OneWay}" />
    </Button>
</UserControl>