<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:presentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <!-- ACCENTS -->
    <SolidColorBrush x:Key="LightAccent" Color="{DynamicResource LightAccentColor}" presentationOptions:Freeze="true" />
    <SolidColorBrush x:Key="Accent" Color="{DynamicResource AccentColor}" presentationOptions:Freeze="true" />
    <SolidColorBrush x:Key="DarkAccent" Color="{DynamicResource DarkAccentColor}" presentationOptions:Freeze="true" />

    <!-- FONT -->
    <SolidColorBrush x:Key="AccentForeground" Color="{DynamicResource AccentTextColor}" presentationOptions:Freeze="true" />
    
    <!-- MENU -->
    <SolidColorBrush x:Key="MenuForeground" Color="{DynamicResource MenuTextColor}" presentationOptions:Freeze="true" />
    <SolidColorBrush x:Key="MainMenu" Color="{DynamicResource MainMenuColor}" presentationOptions:Freeze="true" />
    <SolidColorBrush x:Key="LightMainMenu" Color="{DynamicResource MainMenuColor}" Opacity="0.75" presentationOptions:Freeze="true" />
    <SolidColorBrush x:Key="SecondMenu" Color="{DynamicResource SecondMenuColor}" presentationOptions:Freeze="true" />
</ResourceDictionary>