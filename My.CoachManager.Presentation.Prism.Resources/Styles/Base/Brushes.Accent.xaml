<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ACCENTS -->
    <SolidColorBrush x:Key="LightAccent" Color="{DynamicResource LightAccentColor}" />
    <SolidColorBrush x:Key="Accent" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="DarkAccent" Color="{DynamicResource DarkAccentColor}" />

    <!-- FONT -->
    <SolidColorBrush x:Key="AccentForeground" Color="{DynamicResource AccentTextColor}" />
</ResourceDictionary>