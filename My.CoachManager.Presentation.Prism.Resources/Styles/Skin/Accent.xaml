    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source= "../Base/Brushes.Accent.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- ACCENT -->
    <Color x:Key="LightAccentColor">#38BAFF</Color>
