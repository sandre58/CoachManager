<UserControl x:Class="My.CoachManager.Presentation.Modules.Training.Views.TrainingsAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:controls="clr-namespace:My.CoachManager.Presentation.Controls;assembly=My.CoachManager.Presentation.Controls"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:My.CoachManager.Presentation.Modules.Training.ViewModels"
             xmlns:parameters="clr-namespace:My.CoachManager.Presentation.Controls.Parameters;assembly=My.CoachManager.Presentation.Controls"
             xmlns:strings="clr-namespace:My.CoachManager.CrossCutting.Core.Resources.Entities;assembly=My.CoachManager.CrossCutting.Core"
             xmlns:strings1="clr-namespace:My.CoachManager.CrossCutting.Core.Resources;assembly=My.CoachManager.CrossCutting.Core"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=viewModels:TrainingsAddViewModel}"
             d:DesignHeight="1000" d:DesignWidth="750">

    <controls:WorkspaceView MinHeight="400" MinWidth="500">
        <Grid parameters:PanelParameters.ItemsMargin="{StaticResource FieldMargin}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <controls:Icon Grid.Column="0" Grid.Row="0" Size="Medium" Content="{StaticResource CalendarGeometry}" HorizontalAlignment="Center" />

                <DatePicker
                    Grid.Column="1" Grid.Row="0"
                    Width="{StaticResource MediumWidth}"
                    SelectedDate="{Binding Item.StartDate, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                    parameters:TextBoxParameters.Watermark="{x:Static strings:TrainingResources.StartDate}" />

                <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Static strings1:GlobalResources.To}" HorizontalAlignment="Center" />
                
                <DatePicker
                    Grid.Column="3" Grid.Row="0"
                    Width="{StaticResource MediumWidth}"
                    SelectedDate="{Binding Item.EndDate, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                    parameters:TextBoxParameters.Watermark="{x:Static strings:TrainingResources.EndDate}" />

            </Grid>

            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <controls:Icon Grid.Column="0" Grid.Row="0" Size="Medium" Content="{StaticResource DayGeometry}" HorizontalAlignment="Center" />

                <controls:MultiCheckboxes Grid.Column="1" 
                                          ItemsSource="{Binding AllDays}" SelectedValues="{Binding Days, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ShowAll="False" />


            </Grid>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <controls:Icon Grid.Column="0" Grid.Row="0" Size="Medium" Content="{StaticResource ClockGeometry}" HorizontalAlignment="Center" />

                <controls:TimePicker
                    Grid.Column="1" Grid.Row="0" Width="120"
                    SelectedTime="{Binding Item.StartTime, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                    parameters:TextBoxParameters.Watermark="{x:Static strings:TrainingResources.StartTime}" />

                <TextBlock Grid.Column="2" Grid.Row="0" Text="{x:Static strings1:GlobalResources.To}" HorizontalAlignment="Center" />

                <controls:TimePicker
                    Grid.Column="3" Grid.Row="0" Width="120"
                    SelectedTime="{Binding Item.EndTime, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"
                    parameters:TextBoxParameters.Watermark="{x:Static strings:TrainingResources.EndTime}" />

            </Grid>

            <Grid Grid.Row="3" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <controls:Icon Grid.Column="0" Grid.Row="0" Size="Medium" Content="{StaticResource LocationGeometry}" HorizontalAlignment="Center" />

                <TextBox Grid.Column="1" Width="{StaticResource SmallLargeWidth}" Text="{Binding Item.Place, IsAsync=True}" 
                         parameters:TextBoxParameters.Watermark="{x:Static strings:TrainingResources.Place}"/>
            </Grid>
        </Grid>

        <controls:WorkspaceView.Commands>
            <controls:CommandButton DockPanel.Dock="Right" Command="{Binding CancelCommand}" Style="{StaticResource CancelCommandButtonApplicationBarStyle}" IsCancel="True" />
            <controls:CommandButton DockPanel.Dock="Right" Command="{Binding SaveCommand}" Style="{StaticResource ValidateCommandButtonApplicationBarStyle}" IsDefault="True" />
            <controls:CommandButton DockPanel.Dock="Right" Command="{Binding RefreshCommand}" Content="{StaticResource RefreshGeometry}" Header="{x:Static strings1:ControlResources.Refresh}" />
        </controls:WorkspaceView.Commands>
    </controls:WorkspaceView>
</UserControl>