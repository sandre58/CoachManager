<controls:MetroWindow x:Class="My.CoachManager.Presentation.Prism.Wpf.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:My.CoachManager.Presentation.Prism.Controls;assembly=My.CoachManager.Presentation.Prism.Controls"
        xmlns:strings="clr-namespace:My.CoachManager.Presentation.Prism.Resources.Strings;assembly=My.CoachManager.Presentation.Prism.Resources"
        xmlns:viewModels="clr-namespace:My.CoachManager.Presentation.Prism.Wpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:SplashScreenViewModel}"
        Title="{x:Static strings:GlobalResources.ApplicationTitle}" Height="300" Width="500"
        IsTitleOverlay="True" IsMinimizeButtonVisible="False" IsMaximizeButtonVisible="False" IsTitleVisible="False" ResizeMode="NoResize" ShowInTaskbar="False"
        Background="{DynamicResource Accent}" Foreground="{DynamicResource AccentForeground}" Style="{DynamicResource ModernWindowStyle}"
                      WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Copyright}" Margin="{StaticResource DefaultMargin}" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="{StaticResource LargeHorizontalMargin}">
            <Image Source="pack://application:,,,/My.CoachManager.Presentation.Prism.Resources;component/Pictures/CoachManager.png"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Margin="{StaticResource VeryLargeHorizontalMargin}" Width="150" />
            <StackPanel Orientation="Vertical" Margin="{StaticResource VeryLargeHorizontalMargin}">
                <TextBlock Text="{x:Static strings:GlobalResources.ApplicationTitlePart1}" Margin="0 -20 0 0" FontWeight="Bold" Typography.Capitals="SmallCaps"  VerticalAlignment="Top" FontSize="80" />
                <TextBlock Text="{x:Static strings:GlobalResources.ApplicationTitlePart2}" Margin="0 -30 0 0" FontWeight="Bold" Typography.Capitals="AllSmallCaps" VerticalAlignment="Top" FontSize="54" />
                <TextBlock TextAlignment="Right" Text="{Binding Version}" />
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="{Binding Message}" FontStyle="Italic" Margin="{StaticResource DefaultMargin}" />
        <controls:MetroProgressBar Grid.Row="3" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, UpdateSourceTrigger=PropertyChanged}"
                                  Height="6"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Bottom"
                                  Panel.ZIndex="5"
                                  EllipseDiameter="7"
                                  Foreground="{DynamicResource AccentForeground}"
                                  Maximum="1.0"
                                  Minimum="0.0" IsIndeterminate="True" Margin="0 0 0 2" />
    </Grid>
</controls:MetroWindow>